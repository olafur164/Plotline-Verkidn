{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "author": "Ólafur Hólm",
  "main": "src/server",
  "repository": {
    "type": "git",
    "url": "https://github.com/olafur164/react-boilerplate.git"
  },
  "license": "UNLICENSED",
  "scripts": {
    "lint-server": "eslint --ext .jsx --ext .js src/server",
    "lint-client": "eslint --ext .jsx --ext .js src/client",
    "lint": "yarn lint-server && yarn lint-client",
    "flow-server": "flow src/server/**",
    "flow-client": "flow src/client",
    "bundle-server": "webpack --config webpack.server.config.js  --history-api-fallback",
    "bundle-client": "webpack --config webpack.client.config.js",
    "bundle": "yarn bundle-server && yarn bundle-client",
    "start": "NODE_ENV=production node dist/server/server.js",
    "dev": "babel-node src/server/index.js"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "express": "^4.14.1",
    "isomorphic-fetch": "^2.2.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-router": "^4.0.0",
    "react-router-dom": "^4.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-syntax-flow": "^6.18.0",
    "babel-plugin-tcomb": "^0.3.24",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "css-loader": "^0.27.3",
    "eslint": "^3.14.1",
    "eslint-plugin-flowtype": "^2.30.0",
    "eslint-plugin-react": "^6.9.0",
    "extended-define-webpack-plugin": "^0.1.2",
    "flow": "^0.2.3",
    "flow-bin": "^0.38.0",
    "react-hot-loader": "^1.3.1",
    "react-redux": "^5.0.3",
    "redux": "^3.6.0",
    "style-loader": "^0.14.1",
    "tcomb": "^3.2.16",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.3.0",
    "webpack-fail-plugin": "^1.0.5",
    "webpack-hot-middleware": "^2.16.1"
  }
}
